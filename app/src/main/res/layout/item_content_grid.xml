<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="186dp"
    android:layout_height="288dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_thumnail"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:src="@drawable/thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/text_content"
            android:text="@string/content_text_expl"
            app:layout_constraintEnd_toEndOf="@+id/img_thumnail"
            app:layout_constraintStart_toStartOf="@+id/img_thumnail"
            app:layout_constraintTop_toBottomOf="@+id/img_thumnail" />

        <TextView
            android:id="@+id/tv_title_content_grid"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:text="@string/price_content"
            android:textSize="14sp"
            android:textColor="@color/text_content"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_grid"
            app:layout_constraintStart_toStartOf="@+id/tv_title_grid"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_grid" />

        <ImageView
            android:id="@+id/img_profile_content_grid"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/account_circle_fill"
            app:layout_constraintStart_toStartOf="@+id/tv_title_content_grid"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_content_grid" />

        <TextView
            android:id="@+id/tv_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="@string/store_name_content"
            android:textColor="@color/text_content"
            android:layout_marginStart="5dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_profile_content_grid"
            app:layout_constraintStart_toEndOf="@+id/img_profile_content_grid"
            app:layout_constraintTop_toTopOf="@+id/img_profile_content_grid" />

        <ImageView
            android:id="@+id/img_star_content_grid"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/star_fill"
            android:layout_marginTop="7.25dp"
            app:layout_constraintEnd_toEndOf="@+id/img_profile_content_grid"
            app:layout_constraintStart_toStartOf="@+id/img_profile_content_grid"
            app:layout_constraintTop_toBottomOf="@+id/img_profile_content_grid" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="@string/rating_content"
            android:textColor="@color/text_content"
            android:textSize="10sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/img_star_content_grid"
            app:layout_constraintStart_toEndOf="@+id/img_star_content_grid"
            app:layout_constraintTop_toTopOf="@+id/img_star_content_grid" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>