<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="186dp"
            android:layout_height="186dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/text_content"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/img_item"
            app:layout_constraintStart_toStartOf="@+id/img_item"
            app:layout_constraintTop_toBottomOf="@+id/img_item"
            tools:text="Lenovo Legion 7 16 I7 11800 16GB 1TB SSD RTX3070 8GB" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="170dp"
            android:layout_height="16dp"
            android:layout_marginTop="6dp"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/text_content"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_content"
            app:layout_constraintStart_toStartOf="@+id/tv_title_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_content"
            tools:text="Rp23.499.000" />

        <ImageView
            android:id="@+id/img_profile_content_grid"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/account_circle_fill"
            app:layout_constraintStart_toStartOf="@+id/text_price"
            app:layout_constraintTop_toBottomOf="@+id/text_price" />

        <TextView
            android:id="@+id/tv_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textColor="@color/text_content"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_profile_content_grid"
            app:layout_constraintStart_toEndOf="@+id/img_profile_content_grid"
            app:layout_constraintTop_toTopOf="@+id/img_profile_content_grid"
            tools:text="ProStoreComputer" />

        <ImageView
            android:id="@+id/img_star_content_grid"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginTop="7.25dp"
            android:src="@drawable/star_fill"
            app:layout_constraintEnd_toEndOf="@+id/img_profile_content_grid"
            app:layout_constraintStart_toStartOf="@+id/img_profile_content_grid"
            app:layout_constraintTop_toBottomOf="@+id/img_profile_content_grid" />

        <TextView
            android:id="@+id/tv_rating_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:textColor="@color/text_content"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_star_content_grid"
            app:layout_constraintTop_toTopOf="@+id/img_star_content_grid"
            tools:text="5.0 | Terjual 10" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>